{
  "name": "js-utils",
  "version": "0.0.1",
  "description": "Javascript Utils Functions",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./tmp && mkdir ./tmp",
    "jshint": "./node_modules/.bin/jshint src/",
    "eslint": "./node_modules/.bin/eslint src/",
    "jscs": "./node_modules/.bin/jscs src/",
    "pretest": "npm run jshint && npm run eslint && npm run jscs",
    "test": "./node_modules/.bin/babel-node ./node_modules/.bin/isparta cover --report text --report html ./node_modules/.bin/_mocha --reporter dot -R spec",
    "build:babel": "./node_modules/.bin/babel ./src/jsUtils.js -o ./tmp/index.babel.js",
    "build:uglify": "./node_modules/.bin/uglifyjs ./tmp/index.babel.js -o index.js -c -mt --preamble //${npm_package_name}@${npm_package_version}",
    "build:all": "npm run build:babel && npm run build:uglify",
    "build": "npm run clean && npm run test && npm run build:all"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ViBiOh/js-utils.git"
  },
  "keywords": [
    "js",
    "utils"
  ],
  "author": "Vincent Boutour <vincent.boutour@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ViBiOh/js-utils/issues"
  },
  "homepage": "https://github.com/ViBiOh/js-utils",
  "devDependencies": {
    "babel-cli": "latest",
    "babel-preset-es2015": "latest",
    "chai": "latest",
    "chai-as-promised": "latest",
    "eslint": "latest",
    "isparta": "latest",
    "jscs": "latest",
    "jshint": "latest",
    "mocha": "latest",
    "uglify-js": "latest"
  }
}

{
  "name": "js-utils",
  "version": "0.0.1",
  "description": "Javascript Utils Functions",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --print-width 100 --single-quote --trailing-comma all --color --write \"./src/**/*.js\"",
    "eslint": "eslint --fix \"./src/**/*.js\"",
    "codestyle": "npm run prettier && npm run eslint",
    "pretest": "npm run codestyle",
    "test": "nyc --reporter text --reporter lcov --require babel-core/register ava",
    "coverage": "codecov -f ./coverage/lcov.info",
    "build:uglify": "babel ./src/jsUtils.js | uglifyjs -o index.js -c -m",
    "build": "npm test && npm run build:uglify"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ViBiOh/js-utils.git"
  },
  "keywords": [
    "js",
    "utils"
  ],
  "author": "Vincent Boutour <vincent.boutour@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ViBiOh/js-utils/issues"
  },
  "homepage": "https://github.com/ViBiOh/js-utils",
  "devDependencies": {
    "ava": "latest",
    "babel-core": "latest",
    "babel-cli": "latest",
    "babel-preset-env": "latest",
    "babel-eslint": "latest",
    "codecov": "latest",
    "eslint": "latest",
    "eslint-plugin-import": "latest",
    "eslint-config-airbnb": "latest",
    "nyc": "latest",
    "prettier": "latest",
    "uglify-js": "latest"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ]
  }
}
